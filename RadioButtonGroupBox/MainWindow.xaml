<Window x:Class="RadioButtonGroupBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButtonGroupBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        
        <GroupBox Header="Odpowiedz na pytania">
            <StackPanel>
                <Label>Palisz ?</Label>
                <RadioButton>5</RadioButton>
                <RadioButton>10</RadioButton>
                <RadioButton>15</RadioButton>
                <RadioButton>4</RadioButton>
            </StackPanel>
        </GroupBox>
        <Label>ile masz lat?</Label>
        <StackPanel>
            <RadioButton>5</RadioButton>
            <RadioButton>10</RadioButton>
            <RadioButton>15</RadioButton>
            <RadioButton>4</RadioButton>
        </StackPanel>
    </StackPanel>
</Window>
